{{>header-2}}

<h1>Sign-Up for a Tour</h1>


<div class="well">
	<form class="tourSignUp" action="/tour/signup" method="POST">
		<label for="name">Guide First Name:</label><br>
		<input type="text" class="form-control" id="guideFirstName" name="guideFirstName"><br>

		<label for="name">Guide Last Name:</label><br>
		<input type="text" class="form-control" id="guideLastName" name="guideLastName"><br>

		<label for="name">Tour City:</label><br>
		<input type="text" class="form-control" class="form-control" id="tourCity" name="tourCity"><br>

		<label for="password">Credit Card:</label><br>
		<input type="password" class="form-control" id="creditcard" name="creditcard"><br>

		<label for="date">Tour Date:</label><br>
		<input type="date" class="form-control" id="date" name="date"><br>

		<label for="phone">Phone Number:</label><br>
		<input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
			required><br>




		<button type="submit" class="btn btn-dark">Submit</button>
	</form>
</div>

